#!/bin/bash

echo "Running linter tests"
lines=$(sh scripts/run_linter.sh | wc -l)
if [ $lines -eq 1 ]; then
    echo "Linter tests passed"
else
    # Assign standard input to keyboard
    exec < /dev/tty

    read -p "Linter tests failed. Do you want to continue anyway? (y/n)" yn
    case $yn in
        [Yy]* ) ;;
        [Nn]* ) echo "Not pushing changes"; exit 1;;
        * ) echo "Invalid input";;
    esac
fi

echo "Running karma tests"
#TODO
#sh scripts/run_karma_tests.sh

exit 0

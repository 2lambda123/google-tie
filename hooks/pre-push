#!/bin/bash

echo "Running linter tests"
lines=$(sh scripts/run_linter.sh | wc -l)
if [ $lines -eq 1 ]; then
    echo "Linter tests passed"
else
    read -p "Linter tests failed. Do you want to continue anyway? (y/n)" option
    case $option in
        [Yy]* ) break;;
        [Nn]* ) exit 1;;
        * ) echo "Please enter y or n.";;
    esac
fi

echo "Running karma tests"
#TODO
#sh scripts/run_karma_tests.sh

exit 0
